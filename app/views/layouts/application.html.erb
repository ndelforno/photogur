<!DOCTYPE html>
<html>
<head>
  <title>Photogur</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>

  <%= link_to 'Home', pictures_url %>  -  <%= link_to("New Picture", "/pictures/new") %>
  <p class="userinfo">
    <% if current_user %>
      Signed in as <%= current_user.email %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
    <% else %>
      <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
    <% end %>
  </p>
  </header>
  <main>


<%= yield %>

  </main>

<footer>
  <p>Created By Nicolas Delforno</p>
</footer>

</body>
</html>
