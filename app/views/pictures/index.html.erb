
<h1>Pictures (<%= @pictures.length %>)</h1>

<div class="pictures">
<% @pictures.each do |picture| %>
  <div class="card" style="width: 18rem;">
    <img src=<%="#{picture.url}"%> alt="">
    <div class="card-body">
      <h5 class="card-title"><%= picture.title %></h5>
      <p class="card-text"><%= picture.artist %></p>
      <p class="card-text">Posted by <%= picture.user.email %></p>
      <a href=<%="pictures/#{picture.id}"%> class="btn btn-primary">See picture</a>
    </div>
  </div>
<% end %>
</div>


<h1>Most recent pictures</h1>
    <% carpic1 = @most_recent_pictures[0]%>
    <% carpic2 = @most_recent_pictures[1]%>
    <% carpic3 = @most_recent_pictures[2]%>
    <% carpic4 = @most_recent_pictures[3]%>
    <% carpic5 = @most_recent_pictures[4]%>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src=<%="#{carpic1.url}"%> alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src=<%="#{carpic2.url}"%> alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src=<%="#{carpic3.url}"%> alt="Third slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src=<%="#{carpic4.url}"%> alt="Third slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src=<%="#{carpic5.url}"%> alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

