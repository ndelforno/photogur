
<h1>Pictures (<%= @pictures.length %>)</h1>

<div class="pictures">
<% @pictures.each do |picture| %>
  <p><%= picture.title %>, <%= picture.artist %><br> <br>
  <%= link_to(image_tag(picture.url), "/pictures/#{picture.id}") %> <br>
  by <%= picture.user.email %>
</p>
<% end %>
</div>

<h1>Most recent pictures</h1>
<div class="recent_pictures">
  <% @most_recent_pictures.each do |picture| %>
  <%= link_to(picture.title, "/pictures/#{picture.id}") %>
  <% end %>
</div>

<h1>1 month old pictures</h1>
<div class="pictures">
<% @one_month_old_pic.each do |picture| %>
<%= link_to(image_tag(picture.url), "/pictures/#{picture.id}") %>
<% end %>
</div>


<% @years.each do |year| %>
  <h1><%= year %></h1>
  <hr>
<div class="pictures">
      <% @pictures.each do|picture| %>
      <% if picture.created_at.year == year%>
      <p><%= picture.title %>, <%= picture.artist %> <br> <br>
      <%= link_to(image_tag(picture.url), "/pictures/#{picture.id}") %>
      </p>
      <% end %>
  <% end %>
</div>
<% end %>

